  <body>
    @using PlacesYouveBeen.Models;

    <h1>Places Webpage</h1>
    <p>Not exactly sure what we want to do here but it looks good.</p>
    @if (Model.Count == 0)
    {
      <p>There are no places to display</p>
    }
    <ul>
      @foreach (Place place in Model)
      {
        <li>@place.CityName</li>
        <li>@place.Picture</li>
      }
    </ul>
    <a>maybe a link to somewhere else?</a>
  </body>
